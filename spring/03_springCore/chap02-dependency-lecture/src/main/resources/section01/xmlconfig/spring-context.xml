<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--XML 설정에서 class에는 인터페이스를 사용할 수 없다. -->
    <!-- account라는 이름의 bean 객체에게 생성자를 통해 값을 전달하고 있음.-->
    <bean id="account" class="com.dbwls.common.PersonalAccount">
        <constructor-arg index="0" value="20"/>
        <constructor-arg index="1" value="110-234-567890"/>
    </bean>

    <!-- member라는 bean 객체에 account라는 bean 객체를 주입한다. -->
    <!-- 즉, MemberDTO는 PersonalAccount에 의존하고 있고 이를 지금 주입하는 것이다. -->
    <!-- 1. 생성자 주입-->
    <!-- 생성 된 다른 bean을 의존성 주입 할 경우 ref 속성을 사용해 bean id/name을 전달한다. -->
<!--    <bean id="member" class="com.dbwls.common.MemberDTO">-->
<!--        <constructor-arg name="sequence" value="1"/>-->
<!--        <constructor-arg name="name" value="홍길동"/>-->
<!--        <constructor-arg name="phone" value="010-1234-5678"/>-->
<!--        <constructor-arg name="email" value="hong123@gmail.com"/>-->
<!--        <constructor-arg name="personalAccount" ref="account"/>-->
<!--    </bean>-->

    <!-- 2. setter 주입-->
    <bean id="member" class="com.dbwls.common.MemberDTO">
        <property name="sequence" value="1"/>
        <property name="name" value="홍길동"/>
        <property name="phone" value="010-1234-5678"/>
        <property name="email" value="hong123@gmail.com"/>
        <property name="personalAccount" ref="account"/>
    </bean>
</beans>